<% provide(:metric, @metric == :completeness ? "Completeness" : "Weighted Completeness") %>
<% content_for :content do %>
  <% if @best != nil and @worst != nil %>
    <table class="table table-striped table-bordered completeness-table">
      <thead>
        <tr>
          <th>Field</th>
          <th>Subfield</th>
          <th>Best Record (<%= "%.3f" % (@best[@metric]) %>)</th>
          <th>Worst Record (<%= "%.3f" % (@worst[@metric]) %>)</th>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |field| %>
          <% if field.is_a? Array %>
            <% subfields = field[1..-1] %>
            <% field = field.first %>
            <% maximum = [@best[field].length, @worst[field].length].max %>
            <% maximum.times do |i| %>
              <% subfields.each_with_index do |subfield, j| %>
                <tr>
                  <% if j == 0 %>
                    <td rowspan="<%= subfields.length %>"><%= field.humanize() %></td>
                  <% end %>
                  <td><%= subfield %></td>
                  <td><%= @best[field].andand[i].andand[subfield] %></td>
                  <td><%= @worst[field].andand[i].andand[subfield] %></td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr>
              <td><%= field.humanize() %></td>
              <td></td>
              <td><%= @best[field]  %></td>
              <td><%= @worst[field]  %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end%>
<% end %>
<%= render 'layouts/metric_details' %>
