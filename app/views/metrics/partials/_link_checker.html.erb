<div id="analysis" class="tab-pane active">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <input id="link-checker-filter" class="form-control" type="text">
      <!--
        <div class="input-group">
          <div class="input-group-btn">
            <button class="btn btn-default">Working</button>
            <button class="btn btn-default">All</button>
            <button class="btn btn-default" disabled="disabled">Broken</button>
          </div>
        </div>
      -->
    </div>
  </div> 
  <div class="row">
    <div class="col-md-12">
      <table class="link-checker-table table">
        <thead>
          <th>ID</th>
          <th>URL</th>
          <th>Response</th>
        </thead>
        <tbody>
          <% @analysis.responses.each do |id, responses| %>
            <% responses.each_with_index do |(url, response), i| %>
              <% next if successful?(response) %>
              <tr>
                <td><%= id %></td>
                <td><%= content_tag(:a, url, href: url) %></td>
                <%= response_td(response) %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="statistics" class="tab-pane">
  <div class="row">
    <div class="col-md-12">
      <div class="metric link-checker pie-chart"></div>
    </div>
  </div>
</div>
