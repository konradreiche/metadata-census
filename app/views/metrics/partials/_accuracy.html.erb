<div id="analysis" class="pill-pane active">
  <div class="row">
    <div class="col-md-12 dashboard">
      <h3>Format MIME Type Accuracy</h3>
      <table class="accuracy-table table table-bordered">
        <thead>
          <th>ID</th>
          <th>URL</th>
          <th>Expected MIME</th>
          <th>Actual MIME</th>
        </thead>
        <tbody>
          <% @analysis.each do |id, analysis| %>
            <% analysis.each_with_index.each do |resource_analysis, i| %>
              <tr>
                <%= content_tag(:td, id, rowspan: analysis.length) if i == 0 %>
                <td><%= content_tag(:a, resource_analysis['url'], href: resource_analysis['url']) %></td>
                <td><%= resource_analysis['expected_mime_type'] %></td>
                <%= actual_mime_type(resource_analysis) %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 dashboard">
      <h3>Size Accuracy</h3>
      <table class="accuracy-table table table-bordered">
        <thead>
          <th>ID</th>
          <th>URL</th>
          <th>Expected Size</th>
          <th>Actual Size</th>
        </thead>
        <tbody>
          <% @analysis.select { |a| not a[1]['expected_size'].to_s.empty? }.each do |id, analysis| %>
            <% analysis.each_with_index.each do |format_analysis, i| %>
              <tr>
                <%= content_tag(:td, id, rowspan: analysis.length) if i == 0 %>
                <td><%= content_tag(:a, format_analysis['url'], href: format_analysis['url']) %></td>
                <td><%= format_analysis['expected_size'] %></td>
                <td><%= format_analysis['actual_size'] %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="statistics" class="pill-pane">
  <div class="row">
    <div class="col-md-12 dashboard">
      <h3><span class="glyphicon glyphicon-stats"></span> Responses</h3>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <table class="table">
            <thead>
              <tr>
                <th>Format</th>
                <th>Count</th>
              </tr>
            </thead>
            <tbody>
              <% @snapshot[@metric]['analysis'].to_a.each do |format, count| %>
                <tr>
                  <td><%= format %></td>
                  <td><%= count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
