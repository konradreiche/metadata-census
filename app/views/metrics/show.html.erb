<h1>Metric Report</h1>
<h2><%= @metric.to_s.titlecase %></h2>
<%= render layout: 'shared/repository_breadcrumb' do %>
  <%= repository_metric_repository_menu %>
  <%= repository_metric_metric_menu %>
<% end %>
<div class="row dashboard">
  <div class="col-md-2 col-md-offset-1">
    <div class="metric score-meter"></div>
  </div>
  <div class="col-md-6">
    <p class="description">&ldquo;<%= Metrics.from_sym(@metric).description %>&rdquo;</p>
  </div>
</div>
<div class="dashboard row">
  <div class="col-md-12">
    <ul id="report-tab" class="metrics nav nav-pills">
      <li class="active"><a href="#analysis" data-toggle="pill">Analysis</a></li>
      <li><a href="#statistics" data-toggle="pill">Statistics</a></li>
    </ul>
  </div>
</div>
<div>
<div class="row">
  <div class="col-md-12">
    <div class="pill-content">
      <%= render partial: select_partial() %>
    </div>
  </div>
</div>
