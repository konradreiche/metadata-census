<h1>Administration</h1>
<h2>Scheduler</h2>
<%= render partial: 'shared/repository_breadcrumb', locals: { :link_method => :scheduler_anchor_tag } %>
<div class="row">
  <div class="dashboard col-md-12">
    <div class="admin scheduler progress progress-success">
      <div class="all progress-bar"></div>
    </div>
  </div>
  <div class="dashboard col-md-12">
    <table class="admin scheduler table">
      <thead>
        <tr>
          <th>Metric</th>
          <th>Progress</th>
          <th>Status</th>
          <th>Last Updated</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @metrics.each do |metric| %>
          <tr class="admin control <%= metric %>">
            <td rowspan="2"><%= metric.to_s.titlecase %></td>
            <td><div class="admin control progress progress-info"><%= create_bar(metric, :analyze) %></div></td>
            <td class="admin control status" rowspan="2">
              <span class="label label-info">Computing...</span>
              <%= status(metric) %>
            </td>
            <td rowspan="2">N/A</td>
            <td rowspan="2"><%= create_button(metric) %></td>
          </tr>
          <tr>
            <td><div class="admin control progress progress-success"><%= create_bar(metric, :compute) %></div></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
