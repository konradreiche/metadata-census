<h1>Control Panel</h1>
<div class="dashboard">
  <div class="admin btn-toolbar">
    <div class="btn-group">
      <a class="admin dropdown-toggle" data-toggle="dropdown" href="#">
        <h3><%= @repository.name %> <strong class="repository caret"></strong></h3>
      </a>
      <ul class="dropdown-menu" role="menu">
        <li><a href="?repository=*">All</a></li>
        <li class="divider"></li>
        <% @repositories.each do |repository| %>
          <li><a href="?repository=<%= repository.name %>"><%= repository.name %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <button class="btn compute-metric all"><strong class="icon-th"></strong> Compute All</button>
  <div class="admin control progress progress-success">
    <div class="all bar"></div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Metric</th>
        <th>Progress</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @metrics.each do |metric| %>
        <tr class="admin control <%= metric %>">
          <td rowspan="2"><%= metric.to_s.titlecase %></td>
          <td><div class="admin control progress progress-info"><%= create_bar(metric, :analyze) %></div></td>
          <td class="admin control status"><%= status(metric) %></td>
          <td rowspan="2"><%= create_button(metric) %></td>
        </tr>
        <tr>
          <td><div class="admin control progress progress-success"><%= create_bar(metric, :compute) %></div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
