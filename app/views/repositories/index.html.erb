<%= content_for :content do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Datasets</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody>
      <% @repositories.each do |repository| %>
        <tr>
          <td><%= content_tag(:a, repository.name, href: "/repository/#{repository.name}") %></td>
          <td><%= repository.type %></td>
          <td><%= number_with_delimiter(repository.metadata.count) %></td>
          <td><a href="<%= repository.url %>"><%= repository.url.sub(/^https?\:\/\//, '').sub(/^www./,'') %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= render 'layouts/repositories' %>
