<h1>Repository</h1>
<h2><%= @repository.name %></h2>
<%= render layout: 'shared/repository_breadcrumb' do %>
  <%= repository_menu %>
<% end %>
<div class="dashboard row">
  <div class="col-md-12">
    <h3>Snapshots</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Metadata Records</th>
        </tr>
        <% cache('snapshots') do %>
          <% @snapshots.each do |snapshot| %>
            <tr>
              <td><%= link_to snapshot.date, repository_snapshot_path(@repository, snapshot.date) %></td>
              <td><%= number_with_delimiter snapshot.metadata_records.count %></td>
            </tr>
          <% end %>
        <% end %>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
