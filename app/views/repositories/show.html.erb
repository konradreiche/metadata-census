<h1>Repository</h1>
<h2><%= @repository.name %></h2>
<%= render layout: 'shared/repository_breadcrumb' do %>
  <%= repository_menu %>
<% end %>
<div class="dashboard row">
  <div class="col-md-12">
    <h3>Snapshots</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Metadata Records</th>
        </tr>
        <%= @snapshot_information.to_a.each do |snapshot, information| %>
          <tr>
            <td><%= snapshot.date %></td>
            <td><%= information[:metadata_count] %></td>
          </tr>
        <% end %>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
