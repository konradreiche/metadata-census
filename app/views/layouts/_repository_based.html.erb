<h1><%= yield :heading %></h1>
<div class="repository-menu">
  <a class="repository-based repository-selector" data-toggle="dropdown" href="#">
    <%= @repository.name == '*' ? 'All' : @repository.name %>
    <strong class="repository-based caret"></strong>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><a href="?<%= yield :parameter %>=*">All</a></li>
    <li class="divider"></li>
    <% @repositories.each do |repository| %>
      <li><%= create_repository_link(repository) %></li>
    <% end %>
  </ul>
</div>
<%= yield :content_top %>
<div class="dashboard">
  <%= yield :content %>
</div>
