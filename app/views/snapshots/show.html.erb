<h1>Repository Report</h1>
<h2><%= @repository.name %></h2>
<%= render layout: 'shared/repository_breadcrumb' do %>
  <%= repository_menu %>
  <%= snapshot_menu %>
<% end %>
<div class="dashboard row">
  <div class="col-md-4 col-md-offset-1">
    <div class="repository score-meter"></div>
  </div>
</div>
<div class="dashboard row">
  <div class="col-md-10 col-md-offset-1">
    <table class="repository metric table table-striped">
      <thead>
        <tr>
          <th>Metric</th>
          <th>Weighting</th>
          <th>Score</th>
          <th>Last Updated</th>
        </tr>
      </thead>
      <tbody>
        <% Metrics.all.each do |metric| %>
          <tr>
            <td><%= metric.to_s.titlecase %></td>
            <td>
              <div class="row weight-component">
                <div class="span12"><span class="weight">1&times;</span></div>
              </div>
              <div class="row weight-component">
                <div class="col-md-12"><input class="weight-slider" min="0" max="10" step="1" value="1" type="range" data-metric="<%= metric %>"></div>
              </div>
            </td>
            <td><%= metric_score(metric) %></td>
            <td><%= create_metric_analysis_button(metric) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
